data "aws_ami" "infra-ami" {
  most_recent = true

  owners = ["137112412989"] // Amazon

  filter {
    name   = "architecture"
    values = ["x86_64"]
  }

  filter {
    name   = "root-device-type"
    values = ["ebs"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }

  filter {
    name   = "name"
    values = ["amzn2-ami-hvm-*"] // the systemd version
  }
}
